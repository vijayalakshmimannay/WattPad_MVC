@model WattPad.Models.BlogModel

@{
    ViewData["Title"] = "EditBlog";
}

<h1>EditBlog</h1>

<h4>BlogModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBlog">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" value=" @foreach (var item in ViewBag.Model){ @item.Title }" />
                <span asp-validation-for="Title" class="text-danger"></span>
              
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" value=" @foreach (var item in ViewBag.Model){ @item.Date }" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" value=" @foreach (var item in ViewBag.Model){ @item.Content }" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
